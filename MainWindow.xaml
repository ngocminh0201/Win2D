<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="Win2D.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Win2D"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Win2D"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Orientation="Vertical"
        Spacing="15">
        <Button Click="Button_Click" Content="StartUp" />
        <Button Click="Button_Click_1" Content="Primitive shapes" />
        <Button Click="Button_Click_2" Content="Gradient" />
        <Button Click="Button_Click_4" Content="Clipping and Masking" />
        <Button Click="Button_Click_3" Content="BattleTank Game" />
        <Button Click="Button_Click_5" Content="ProgressCircle" />
    </StackPanel>
</Window>
